<h1>All our Flats (<%= @flats.count %>)</h1>
<% @flats.each do |flat| %>
  <div class="col-md-4 flat-card"><%=  %></div>
  <div class="flat-card-content">
    <div class="flat-card-title">
      <h4><%= flat.name %></h4>
    </div>
    <p><%= flat.address %></p>
    <div class="flex">
      <div class="flex">
        <i class="fa-solid fa-user-group"></i><span><%= flat.number_of_guests %></span>
      </div>
      <div class="flex ms-3">
        <i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %>
      </div>
    </div>
  </div>
<% end %>
